<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/bg_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/formLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    </LinearLayout>

    <TextView
        android:id="@+id/statusDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/normalMode"
        android:layout_below="@+id/normalMode"
        android:layout_marginTop="36dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0000ff" />

    <ImageView
        android:id="@+id/sleepI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/normalI"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sleep1" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sleepI"
        android:layout_alignParentBottom="true"
        android:background="#00ff0000"
        android:drawableBottom="@drawable/stop"
        

 />

    <Button
        android:id="@+id/download"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/formLogin"
        android:layout_alignParentTop="true"
        android:background="#00ff0000"
        android:drawableBottom="@drawable/button_click" />

    <TextView
        android:id="@+id/normalMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/download"
        android:layout_alignRight="@+id/normalI"
        android:text="평상시"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/sleepMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/normalI"
        android:layout_centerHorizontal="true"
        android:text="취침"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/normalI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download"
        android:layout_toLeftOf="@+id/sleepI"
        android:src="@drawable/normal1" />

    <TextView
        android:id="@+id/outMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/outsideI"
        android:layout_alignLeft="@+id/outsideI"
        android:text="외출"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/outsideI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sleepI"
        android:layout_toRightOf="@+id/sleepI"
        android:src="@drawable/outside1" />

</RelativeLayout>